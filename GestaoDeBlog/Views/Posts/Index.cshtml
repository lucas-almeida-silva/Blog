@model IEnumerable<GestaoDeBlog.Services.ViewModels.PostListVm>

@{
    ViewData["Title"] = "Index";
}

<h1 class="text-center">Posts</h1>

<p>
    <a asp-action="Insert" class="btn btn-success">Criar Post</a>
</p>

<table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.PostId)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Titulo)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Autor)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Criacao)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Ativo)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.PostId)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Titulo)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Autor)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Criacao)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Ativo)
                    </td>
                    <td>
                        @Html.ActionLink("Editar", "Edit", new { id = item.PostId }, new { @class = "btn btn-info" })
                        @Html.ActionLink("Detalhes", "Details", new { id = item.PostId }, new { @class = "btn btn-primary" })

                        <button title="Excluir" data-id=@item.PostId class="btn btn-danger excluir">
                            Excluir
                        </button>
                    </td>
                </tr>
            }
        </tbody>
    </table>

<div class="modal" id="modal"></div>

@section Scripts{
    <script>
        $(document).ready(function () {
            $(".excluir").click(function () {
                var id = $(this).attr("data-id");
                $("#modal").load("/Posts/Delete/" + id, function () {
                    $("#modal").modal();
                });
            });

        });

    </script>
}

